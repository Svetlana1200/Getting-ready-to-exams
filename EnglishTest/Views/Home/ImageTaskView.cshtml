@model ImageTask

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<task class="color-task-conteiner-image">
    <task class="task-container-image">
        <task class="description-image">
            Look at the text. What does it say? Choose the correct answer.
        </task>
        @using (Html.BeginForm("CheckAnswer", "Home", FormMethod.Post))
        {
            <task class="block-image-task">
                <link href="~/css/colors.css" rel="stylesheet" />
                <link href="~/css/style.css" rel="stylesheet" />
                @Html.Raw(@Model.Script)
                <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
                <task class="image-task">

                    @if (@Model.Question.Length > 1)
                    {
                        <task class="block-variant-image" style="margin-bottom:21px">@Model.Question</task>
                    }

                    <task class="block-variant-image">
                        <label>
                            @Html.RadioButton("userAnswer", "1", true)
                            @Model.First
                        </label>
                    </task>
                    <task class="block-variant-image">
                        <label>
                            @Html.RadioButton("userAnswer", "2")
                            @Model.Second
                        </label>
                    </task>
                    <task class="block-variant-image">
                        <label>
                            @Html.RadioButton("userAnswer", "3")
                            @Model.Third
                        </label>
                    </task>

                </task>
            </task>

            <input type="submit" style="margin-bottom:65px" value="Проверить" />
        }
    </task>
</task>
