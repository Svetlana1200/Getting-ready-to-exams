@model IAnswer

<h4>Task @ViewBag.TaskNumber/@ViewBag.TotalNumber</h4>

@{ string view = ViewBag.TaskViews[Model.GetType()]; }
@await Html.PartialAsync(view, Model)

@{
    if (ViewBag.TaskNumber < ViewBag.TotalNumber && !ViewBag.IsTrainingFinish)
    {
        <p><a href="~/Home/ShowNextTask">Next task</a></p>
    }
    else
    {
        <p><a href="~/Home/ShowResults">Find out the results</a></p>
    }
}
